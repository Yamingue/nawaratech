<div data-aos="flip-left" class="col-sm-6">
    <div class="card mb-3">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="{{ service.photo }}" alt="{{ service.nom }}"
                    class="img-fluid" />
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">{{ service.nom }}</h5>
                    <p class="card-text">
                        {{ service.description }}
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>