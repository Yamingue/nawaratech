{% for menbre in menbres %}
<div class="col-sm-3 mt-2" data-aos="fade-up">
    <div class="card">
        <div class="card-body d-flex flex-row">
            <div>
                <h5 class="card-title font-weight-bold mb-2">{{ menbre.nom }}</h5>
            </div>
        </div>
        <div class="bg-image hover-overlay ripple rounded-0" data-mdb-ripple-color="light">
            <img class="img-fluid" src="{{ menbre.photo }}"
                alt="Card image cap" />
            <a href="#!">
                <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
            </a>
        </div>
        <div class="card-body">
            <p class="card-text collapse" id="m{{ menbre.id }}">
                {{ menbre.role }}
            </p>
            <div class="d-flex justify-content-between">
                <a class="btn btn-link link-danger p-md-1 my-1" data-mdb-toggle="collapse" href="#m{{ menbre.id }}"
                    role="button" aria-expanded="false" aria-controls="m{{ menbre.id }}">{% trans %}Lire plus{% endtrans %}</a>
                <div>
                    <i class="fas fa-edit text-success p-md-1 my-1 me-2" data-mdb-toggle="tooltip"
                        data-mdb-placement="top" title="{% trans %}Editer{% endtrans %}"></i>
                    <i class="fas fa-trash p-md-1 my-1 me-0 text-danger" data-mdb-toggle="tooltip"
                        data-mdb-placement="top" title="{% trans %}Supprimer{% endtrans %}"></i>
                </div>
            </div>
        </div>
    </div>
</div>   

{% endfor %}